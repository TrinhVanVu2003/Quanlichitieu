<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDFDF"
    android:orientation="vertical"
    tools:context=".AddWalletActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:id="@+id/imgBackadd"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="80dp"
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Ví" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginLeft="320dp"
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="50dp" >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/circlewallet" />

        <TextView
            android:layout_marginLeft="100dp"
            android:textSize="20dp"
            android:layout_marginTop="150dp"
            android:id="@+id/tvSotienhienco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền hiện có" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/dollar" />

        <EditText
            android:background="@android:color/transparent"
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Tên"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="30dp" />

        <TextView
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="90dp"
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn vị tiền tệ" />

        <TextView
            android:layout_marginLeft="100dp"
            android:textSize="30dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/black"
            android:id="@+id/tvBalancee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </android.support.v7.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:gravity="center"
        android:id="@+id/tvTenApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="99dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="LOGIN"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#34B440"
        android:textSelectHandle="@drawable/ic_launcher_foreground"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="259dp"
        android:background="@drawable/edt_backgroud"
        android:drawableLeft="@drawable/icon_person"
        android:ems="10"
        android:hint="Tên Đăng Nhập"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_below="@id/edtUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/edt_backgroud"
        android:drawableLeft="@drawable/icon_security"
        android:ems="10"
        android:hint="Mật Khẩu"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/chkRememberMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="25dp"
        android:text="Lưu Đăng Nhập" />

    <Button
        android:textColor="@color/white"
        android:id="@+id/btnLogin"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="81dp"
        android:background="@drawable/edt_buttonbackground"
        android:onClick="btnDangNhap_onClick"
        android:text="Đăng Nhập"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="197dp"
        android:layout_marginRight="197dp"
        android:text="Chưa có tài khoản?" />

    <TextView
        android:id="@+id/tvDangki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:text="Đăng kí ngay"
        android:textColor="@color/xanh" />


</RelativeLayout>
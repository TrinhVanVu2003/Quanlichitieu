<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xammm"
    android:orientation="vertical"
    tools:context=".fragment.AddFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="436dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/tvBalanceAddTranc"
            android:layout_width="193dp"
            android:layout_height="64dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="28sp" />
        <TextView
            android:id="@+id/tvCurrencyCodeAddTranc"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="57dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND"/>

        <ImageView
            android:id="@+id/imgCate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/img_ask" />

        <EditText
            android:id="@+id/tvNoteTranc"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="210dp"
            android:text=""
            android:hint="Thêm ghi chú"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvChonCate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="135dp"
            android:text="Chọn nhóm"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/img_note" />

        <ImageView
            android:id="@+id/imgCalendar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/img_calendar" />

        <TextView
            android:id="@+id/tvChoseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="280dp"
            android:text="Chọn thời gian"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="340dp"
            android:src="@drawable/img_walletcir" />

        <TextView
            android:id="@+id/tvChonWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="350dp"
            android:text="Chọn ví"
            android:textSize="18dp" />
    </android.support.v7.widget.CardView>

    <Button
        android:textColor="@color/white"
        android:background="@drawable/edt_buttonbackground"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Thêm giao dịch" />
</LinearLayout>
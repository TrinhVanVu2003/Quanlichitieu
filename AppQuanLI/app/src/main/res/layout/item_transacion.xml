<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:id="@+id/imgCateTrans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/img_food" />

    <TextView
        android:textColor="@color/black"
        android:layout_marginLeft="100sp"
        android:textSize="20dp"
        android:layout_marginTop="65dp"
        android:id="@+id/tvCateNameTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ăn uống" />

    <TextView
        android:layout_marginLeft="300dp"
        android:layout_marginTop="12dp"
        android:id="@+id/tvBalanceChange"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:id="@+id/tvDateTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="20-11-2023" />

    <TextView
        android:layout_marginTop="65dp"
        android:textSize="20dp"
        android:layout_marginLeft="300dp"
        android:id="@+id/tvBalanceChangeBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20,000" />

</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add.KhoanChiFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="6dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_layout_custom">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:src="@drawable/calendarr" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/tvdate"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:paddingTop="7dp"
                android:text="Ngày"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvResultDate"
                android:layout_width="224dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="5dp"
                android:hint="00/00/00"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imgbtnEditCalender"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/calender" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="6dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_layout_custom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pencil" />

            <TextView
                android:paddingTop="7dp"
                android:id="@+id/tvGhiChu"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:text="Ghi chú"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/edtGhiChuKT"
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập ghi chú"
                android:inputType="textPersonName"
                android:text=""
                android:textAlignment="center"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="6dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_layout_custom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingTop="7dp"
                android:text="Tiền Chi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/edtKhoanChi"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:hint="0usd"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="6dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/my_layout_custom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/categories" />

            <TextView
                android:paddingTop="7dp"
                android:id="@+id/textView7"
                android:layout_width="123dp"
                android:layout_height="50dp"
                android:text="Danh mục"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <Spinner
                android:id="@+id/spnDanhMuc"
                android:layout_width="159dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/imgbtnAddDanhMuc"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/add" />

        </LinearLayout>

        <Button
            android:layout_marginLeft="80dp"
            android:layout_marginTop="300dp"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:id="@+id/btnThemKhoanChi"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/hinhvuongbogoc"
            android:text="Thêm khoản Chi"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>
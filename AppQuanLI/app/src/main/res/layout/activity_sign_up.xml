<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_custom_backgroud"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tvTenApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="Đăng Kí"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:typeface="normal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvTenApp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="159dp"
        android:layout_marginRight="159dp"
        android:background="@drawable/logo" />

    <EditText
        android:id="@+id/edtUsername1"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/edt_backgroud"
        android:drawableLeft="@drawable/icon_person"
        android:ems="10"
        android:hint="Tên đăng nhập"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtPassword1"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_below="@+id/edtUsername1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edt_backgroud"
        android:drawableLeft="@drawable/icon_security"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtRePassword"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_below="@id/edtPassword1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edt_backgroud"
        android:drawableLeft="@drawable/icon_security"
        android:ems="10"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSignup1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edtRePassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/edt_backgroud"
        android:text="Đăng Kí"
        android:textSize="20sp" />
</RelativeLayout>
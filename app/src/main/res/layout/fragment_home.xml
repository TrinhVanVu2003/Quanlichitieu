<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/xammm"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        app:cardCornerRadius="24dp">

        <TextView
            android:layout_marginTop="78dp"
            android:layout_marginLeft="250dp"
            android:id="@+id/tvTientrongvi"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="20.000 VNĐ" />

        <View
            android:layout_marginLeft="20dp"
            android:layout_width="320dp"
            android:layout_height="0.8dp"
            android:layout_marginTop="50dp"
            android:background="@color/black" />

        <TextView
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="78dp"
            android:id="@+id/tvLoaivi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền mặt" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:id="@+id/imageView"
            android:layout_width="41dp"
            android:layout_height="41dp"
            app:srcCompat="@drawable/mywallet" />

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20dp"
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/xanh"
            android:text="Xem tất cả" />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textSize="18dp"
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ví của tôi" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/tvSoDu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:text="20.000 VNĐ"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="55dp"
        android:text="Tổng số dư"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="300dp"
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Báo cáo chi tiêu" />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/xanh"
        android:textSize="15dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="300dp"
        android:id="@+id/tvXembaocao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem báo cáo" />

    <android.support.v7.widget.CardView
        android:layout_width="370dp"
        android:layout_height="330dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        app:cardCornerRadius="24dp">

        <android.support.design.widget.TabLayout
            android:background="@drawable/bg_view_card_tab"
            android:layout_marginTop="10dp"
            android:id="@+id/tabLayout"
            android:layout_marginLeft="55dp"
            android:layout_width="250dp"
            app:tabIndicatorGravity="stretch"
            app:tabMinWidth="300dp"
            app:tabIndicatorAnimationDuration="@android:integer/config_shortAnimTime"
            app:tabIndicator="@drawable/indicator_tab"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="center"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="60dp" />
    </android.support.v7.widget.CardView>


</RelativeLayout>